{
  "info": {
    "name": "Router Monitoring API",
    "description": "API Collection for Router Monitoring System with Laravel + Grafana",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Ready",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health/ready",
              "host": ["{{base_url}}"],
              "path": ["health", "ready"]
            }
          }
        },
        {
          "name": "Live",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health/live",
              "host": ["{{base_url}}"],
              "path": ["health", "live"]
            }
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": ["{{base_url}}"],
              "path": ["login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/me",
              "host": ["{{base_url}}"],
              "path": ["me"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/logout",
              "host": ["{{base_url}}"],
              "path": ["logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Routers",
      "item": [
        {
          "name": "List Routers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/routers",
              "host": ["{{base_url}}"],
              "path": ["routers"]
            }
          }
        },
        {
          "name": "Create Router",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nama_router\": \"Router-Office-1\",\n  \"ip_address\": \"192.168.1.1\",\n  \"port\": 8728,\n  \"username\": \"admin\",\n  \"password\": \"mikrotik123\",\n  \"router_category_id\": 1,\n  \"latitude\": -6.2088,\n  \"longitude\": 106.8456,\n  \"lokasi\": \"Jakarta Office\",\n  \"keterangan\": \"Main office router\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/routers",
              "host": ["{{base_url}}"],
              "path": ["routers"]
            }
          }
        },
        {
          "name": "Get Router",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/routers/1",
              "host": ["{{base_url}}"],
              "path": ["routers", "1"]
            }
          }
        },
        {
          "name": "Update Router",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nama_router\": \"Router-Office-1-Updated\",\n  \"lokasi\": \"Jakarta Office - Floor 2\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/routers/1",
              "host": ["{{base_url}}"],
              "path": ["routers", "1"]
            }
          }
        },
        {
          "name": "Delete Router",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/routers/1",
              "host": ["{{base_url}}"],
              "path": ["routers", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Router Status",
      "item": [
        {
          "name": "Check Single Router",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/routers/1/check",
              "host": ["{{base_url}}"],
              "path": ["routers", "1", "check"]
            }
          }
        },
        {
          "name": "Check All Routers",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/routers/check-all",
              "host": ["{{base_url}}"],
              "path": ["routers", "check-all"]
            }
          }
        },
        {
          "name": "Get Router History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/routers/1/history?days=7",
              "host": ["{{base_url}}"],
              "path": ["routers", "1", "history"],
              "query": [
                {
                  "key": "days",
                  "value": "7"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "List Categories",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/categories",
              "host": ["{{base_url}}"],
              "path": ["categories"]
            }
          }
        },
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nama_kategori\": \"Branch Office\",\n  \"keterangan\": \"Branch office routers\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/categories",
              "host": ["{{base_url}}"],
              "path": ["categories"]
            }
          }
        }
      ]
    },
    {
      "name": "Maps",
      "item": [
        {
          "name": "Get Routers for Map",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/map/routers",
              "host": ["{{base_url}}"],
              "path": ["map", "routers"]
            }
          }
        },
        {
          "name": "Get GeoJSON",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/map/geojson",
              "host": ["{{base_url}}"],
              "path": ["map", "geojson"]
            }
          }
        },
        {
          "name": "Get Map Metrics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/map/metrics",
              "host": ["{{base_url}}"],
              "path": ["map", "metrics"]
            }
          }
        }
      ]
    },
    {
      "name": "Metrics",
      "item": [
        {
          "name": "Prometheus Metrics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/metrics",
              "host": ["{{base_url}}"],
              "path": ["metrics"]
            }
          }
        }
      ]
    }
  ]
}
